set $mod Mod4
bindsym $mod+Left focus left
bindsym $mod+Return exec xterm
bindsym $mod+Right focus right
bindsym $mod+Shift+3 exec maim "/home/$USER/$(date +'%y-%m-%d-%H-%M-%S').png"
bindsym $mod+Shift+4 exec maim --select "/home/$USER/$(date +'%y-%m-%d-%H-%M-%S').png"
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Right move right
bindsym $mod+Shift+q exec "i3-msg exit"
bindsym $mod+Shift+r restart
bindsym $mod+s split h
bindsym $mod+l fullscreen toggle
bindsym $mod+q kill
bindsym $mod+t exec thunar
bindsym $mod+f exec firefox
bindsym $mod+e exec emacs
bindsym XF86MonBrightnessDown exec brightnessctl set 0
bindsym XF86MonBrightnessUp exec brightnessctl set 1000
bindsym XF86AudioRaiseVolume exec amixer sset Master Playback 10%+
bindsym XF86AudioLowerVolume exec amixer sset Master Playback 10%-
client.focused #000000 #000000 #ffffff client.focused_inactive #000000 #000000 #555555
client.unfocused #000000 #000000 #555555
default_border none
workspace_layout tabbed

exec xinput set-prop 13 324 1
exec xinput set-prop 13 310 1
exec xinput set-prop 13 320 0
exec xinput set-prop 13 301 1
exec xinput set-prop 13 321 30
exec xrdb -merge ~/.Xresources
exec xcalib ~/code/os/arch/icc/Color\ LCD-68FE312B-5EF0-E0A1-BCD8-8890B73C7B3A.icc

